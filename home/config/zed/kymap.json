// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: Open Default Keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-t": "terminal_panel::ToggleFocus",
      "ctrl-h": null,
      "ctrl-j": null,
      "ctrl-k": null,
      "ctrl-l": null,
      "cmd-o": "projects::OpenRecent"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-h": null,
      "ctrl-j": null,
      "ctrl-k": null,
      "ctrl-l": null,
      "cmd-o": "projects::OpenRecent"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::ToggleBottomDock",
      "cmd-n": "workspace::NewTerminal",
      "L": "pane::ActivateNextItem",
      "H": "pane::ActivatePreviousItem",
      "ctrl-h": null,
      "ctrl-j": null,
      "ctrl-l": null,
      "ctrl-k": "workspace::ActivatePaneUp"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "j j": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      ";": ["workspace::SendKeystrokes", ":"],
      "L": "pane::ActivateNextItem",
      "H": "pane::ActivatePreviousItem",
      "space a": "workspace::ToggleRightDock",
      "space f": "file_finder::Toggle",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      // "space a": "assistant::InlineAssist",
      // "space  ,": "assistant::InsertIntoEditor",
      // "space .": "assistant::QuoteSelection"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "space f": "file_finder::Toggle",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "ContextEditor > Editor && vim_mode == normal",
    "bindings": {
      "enter": "assistant::Assist"
    }
  }
]
